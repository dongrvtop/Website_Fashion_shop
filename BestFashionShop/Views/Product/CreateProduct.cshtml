<style>
    .box_url_image {
        display: flex;
        box-sizing: border-box;
    }

        .box_url_image div {
            padding: 0 !important;
        }

    .btn_delete_url {
        cursor: pointer;
        padding: 4px 12px;
        border: 1px solid white;
        color: white;
        background: red;
        border-radius: 4px;
    }

        .btn_delete_url:hover {
            border: 1px solid red;
            color: red;
            background: white;
        }

    .box_btn_delete {
        display: flex;
        align-items: start;
    }

    .btn_add_image {
        cursor: pointer;
        padding: 4px 12px;
        border: 1px solid white;
        color: white;
        background: green;
        border-radius: 4px;
    }

        .btn_add_image:hover {
            border: 1px solid green;
            color: green;
